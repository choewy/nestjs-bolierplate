{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": ["<rootDir>"],
  "moduleNameMapper": {
    "^test(|/.*)$": "<rootDir>/test/$1",
    "^@config(|/.*)$": "<rootDir>/src/config/$1",
    "^@domain(|/.*)$": "<rootDir>/src/domain/$1"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage/spec"
}
